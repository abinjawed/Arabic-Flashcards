<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/button3"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_row="0"
            android:layout_column="7"
            android:background="@drawable/custom_numbers" />

        <Button
            android:id="@+id/button2"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/custom_letters" />

        <Button
            android:id="@+id/button4"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/maincolors" />

        <Button
            android:id="@+id/button5"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_row="2"
            android:layout_column="7"
            android:background="@drawable/mainshapes" />

        <Button
            android:id="@+id/button6"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/mainanimals" />

        <Button
            android:id="@+id/button7"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_row="3"
            android:layout_column="7"
            android:background="@drawable/mainfood" />

        <Button
            android:id="@+id/button8"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_row="4"
            android:layout_column="0"
            android:background="@drawable/mainpeople" />

        <Button
            android:id="@+id/button9"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_row="4"
            android:layout_column="7"
            android:background="@drawable/ratethisapp" />


    </GridLayout>
</ScrollView>
